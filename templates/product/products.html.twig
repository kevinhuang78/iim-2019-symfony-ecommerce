{% extends 'base.html.twig' %}

{% block title %}All products{% endblock %}

{% block body %}
    <div class="row">
        {% for product in products %}
            {% set collection = product.collection %}
            <div class="col-md-6 col-sm-12">
                <a href="{{ path('product', {'slug': product.slug}) }}">
                    <img src="{{ product.pictureUrl }}" alt="{{ "Photo de " ~ product.name }}" style="width: auto; height: 200px;">
                    <p>{{ "Nom : " ~ product.name }}</p>
                    <p>{{ "Prix : " ~ price_format(product.price) }}</p>
                </a>
                <p>Ce produit appartient Ã  la collection :</p>
                <p>- <a href="{{ path('collection', {'slug': collection.slug}) }}">{{ collection.name }}</a></p>
            </div>
        {% endfor %}
        <div class="ml-auto mr-4 mt-3">
            {% for i in range(1, maxPagination) %}
                <a href="{{ path('products', {'offset': i}) }}">{{ i }}</a>
            {% endfor %}
        </div>
    </div>
{% endblock %}