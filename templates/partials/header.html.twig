<!-- Header -->
<header class="header1">
    <!-- Header desktop -->
    <div class="container-menu-header">
        <div class="wrap_header">
            <!-- Logo -->
            <a href="{{ path('index') }}" class="logo">
                <img src="https://via.placeholder.com/120x27" alt="IMG-LOGO">
            </a>

            <!-- Menu -->
            <div class="wrap_menu">
                <nav class="menu">
                    <ul class="main_menu">

                        <li class="sale-noti">
                            <a href="{{ path('index') }}">Home</a>
                        </li>

                        <li>
                            <a href="{{ path('collections', {'offset': 1}) }}">Collections</a>
                        </li>

                        <li>
                            <a href="{{ path('products', {'offset': 1}) }}">Products</a>
                        </li>

                        <li>
                            <a href="#">Account</a>
                            <ul class="sub_menu">
                                {% if is_granted('ROLE_ADMIN') and is_granted('ROLE_USER') %}
                                    <li><a href="{{ path('admin_profile') }}">My profile</a></li>
                                    <li><a href="{{ path('app_logout') }}">Log out</a></li>
                                {% elseif is_granted('ROLE_USER') and not is_granted('ROLE_ADMIN') %}
                                    <li><a href="{{ path('user_profile') }}">My profile</a></li>
                                    <li><a href="{{ path('app_logout') }}">Log out</a></li>
                                {% else %}
                                    <li><a href="{{ path('app_login') }}">Log in</a></li>
                                    <li><a href="{{ path('app_register') }}">Register</a></li>
                                {% endif %}
                            </ul>
                        </li>
                    </ul>
                </nav>
            </div>

            <!-- Header Icon -->
            <div class="header-icons">
                {% if is_granted('ROLE_ADMIN') and is_granted('ROLE_USER') %}
                    <a href="{{ path('admin_profile') }}" class="header-wrapicon1 dis-block">
                        <img src="{{ asset('images/icons/icon-header-01.png') }}" class="header-icon1" alt="ICON">
                    </a>
                {% elseif is_granted('ROLE_USER') and not is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('user_profile') }}" class="header-wrapicon1 dis-block">
                        <img src="{{ asset('images/icons/icon-header-01.png') }}" class="header-icon1" alt="ICON">
                    </a>
                {% else %}
                    <a href="#" class="header-wrapicon1 dis-block">
                        <img src="{{ asset('images/icons/icon-header-01.png') }}" class="header-icon1" alt="ICON">
                    </a>
                {% endif %}

                <span class="linedivide1"></span>

                <div class="header-wrapicon2">
                    {{ render(controller('App\\Controller\\CartController::partial')) }}
                </div>
            </div>
        </div>
    </div>

    <!-- Header Mobile -->
    <div class="wrap_header_mobile">
        <!-- Logo moblie -->
        <a href="{{ path('index') }}" class="logo-mobile">
            <img src="https://via.placeholder.com/120x27" alt="IMG-LOGO">
        </a>

        <!-- Button show menu -->
        <div class="btn-show-menu">
            <!-- Header Icon mobile -->
            <div class="header-icons-mobile">
                {% if is_granted('ROLE_ADMIN') and is_granted('ROLE_USER') %}
                    <a href="{{ path('admin_profile') }}" class="header-wrapicon1 dis-block">
                        <img src="{{ asset('images/icons/icon-header-01.png') }}" class="header-icon1" alt="ICON">
                    </a>
                {% elseif is_granted('ROLE_USER') and not is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('user_profile') }}" class="header-wrapicon1 dis-block">
                        <img src="{{ asset('images/icons/icon-header-01.png') }}" class="header-icon1" alt="ICON">
                    </a>
                {% else %}
                    <a href="#" class="header-wrapicon1 dis-block">
                        <img src="{{ asset('images/icons/icon-header-01.png') }}" class="header-icon1" alt="ICON">
                    </a>
                {% endif %}

                <span class="linedivide2"></span>

                <div class="header-wrapicon2">
                    <!-- Header cart noti -->
                    {{ render(controller('App\\Controller\\CartController::partial')) }}
                </div>
            </div>

            <div class="btn-show-menu-mobile hamburger hamburger--squeeze">
                        <span class="hamburger-box">
                            <span class="hamburger-inner"></span>
                        </span>
            </div>
        </div>
    </div>

    <!-- Menu Mobile -->
    <div class="wrap-side-menu">
        <nav class="side-menu">
            <ul class="main-menu">

                <li class="item-menu-mobile">
                    <a href="{{ path('index') }}">Home</a>
                </li>

                <li class="item-menu-mobile">
                    <a href="{{ path('collections', {'offset': 1}) }}">Collections</a>
                </li>

                <li class="item-menu-mobile">
                    <a href="{{ path('products', {'offset': 1}) }}">Products</a>
                </li>

                <li>
                    <a href="#">Account</a>
                    <ul class="sub_menu">
                        {% if is_granted('ROLE_ADMIN') and is_granted('ROLE_USER') %}
                            <li><a href="{{ path('admin_profile') }}">My profile</a></li>
                            <li><a href="{{ path('app_logout') }}">Log out</a></li>
                        {% elseif is_granted('ROLE_USER') and not is_granted('ROLE_ADMIN') %}
                            <li><a href="{{ path('user_profile') }}">My profile</a></li>
                            <li><a href="{{ path('app_logout') }}">Log out</a></li>
                        {% else %}
                            <li><a href="{{ path('app_login') }}">Log in</a></li>
                            <li><a href="{{ path('app_register') }}">Register</a></li>
                        {% endif %}
                        <i class="arrow-main-menu fa fa-angle-right" aria-hidden="true"></i>
                    </ul>
                </li>
            </ul>
        </nav>
    </div>
</header>